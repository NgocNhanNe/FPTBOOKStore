@model IEnumerable<FPTBook.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<h2>List of Category</h2>

<p>
    <div class="mb-3"><a class="btn btn-primary" href="@Url.Action("Create")">Create New Category</a></div>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CatName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CatName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id=item.Cat_ID }, new { @class = "fas fa-edit", @style = "color:darkorange"})
        </td>
        <td>
            @Html.ActionLink(" ", "Delete", new { id = item.Cat_ID }, new { @class = "fas fa-trash", @style = "color:darkorange"})
        </td>
    </tr>
}

</table>
