@model IEnumerable<FPTBook.Models.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cat_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CatName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Cat_ID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CatName)
    </td>
    <td>
        @Html.DisplayNameFor(model => model.Description)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Cat_ID }) |
        @Html.ActionLink("Details", "Details", new { id = item.CatName }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Description })
    </td>
</tr>
    }

</table>

