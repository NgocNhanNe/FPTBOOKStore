@model IEnumerable<FPTBook.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<h2>List of Orders</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User.FullName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.totalPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address_Delivery)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone_Delivery)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order_Date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.User.FullName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.totalPrice)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Address_Delivery)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Phone_Delivery)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Order_Date)
    </td>
    <td>
        @Html.ActionLink("Delete", "Delete", new { id = item.Order_ID })
    </td>

</tr>
}

</table>
