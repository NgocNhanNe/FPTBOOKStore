@model IEnumerable<FPTBook.Models.Book>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
<h1>Statistic of data</h1>
<div class="row">
    <div class="col-lg-6 mb-4">
        <div class="card textwhite bg-secondary text-white shadow">
            <div class="card-body">
                <h4 class="m-0">Users : @ViewBag.TotalUser </h4>
                <a href="@Url.Action("Index","ManageUser")">View Details</a>
            </div>
        </div>
    </div>
    <div class="col-lg-6 mb-4">
        <div class="card textwhite bg-success text-white shadow">
            <div class="card-body">
                <h4 class="m-0">Books : @ViewBag.TotalBook</h4>
                <a href="@Url.Action("Index","Books")">View Details</a>
            </div>
        </div>
    </div>
    <div class="col-lg-6 mb-4">
        <div class="card textwhite bg-info text-white shadow">
            <div class="card-body">
                <h4 class="m-0">Categories : @ViewBag.TotalCate</h4>
                <a href="@Url.Action("Index","Categories")">View Details</a>
            </div>
        </div>
    </div>
    <div class="col-lg-6 mb-4">
        <div class="card textwhite bg-warning text-white shadow">
            <div class="card-body">
                <h4 class="m-0">Orders : @ViewBag.TotalOrder</h4>
                <a href="@Url.Action("Index","Orders")">View Details</a>
            </div>
        </div>
    </div>
</div>
<h2>List of Books</h2>
@foreach (var item in Model)
{
    <div class="container mt-5 mb-5">
        <div class="d-flex justify-content-center row">
            <div class="col-md-10">
                <div class="row p-2 bg-white border rounded">
                    <div class="col-md-3 mt-1"><img class="img-fluid img-responsive rounded product-image" style="width:150px; height:200px" src="~/assets/img/@item.Img" /></div>
                    <div class="col-md-6 mt-1">
                        <h5>@item.BookName</h5>
                        <p class="text-justify text-truncate para mb-0">@item.Description<br><br></p>
                    </div>
                    <div class="align-items-center align-content-center col-md-3 border-left mt-1">
                        <div class="d-flex flex-row align-items-center">
                        </div>
                        <div class="d-flex flex-column mt-4"><h2 style="text-align:center">$@item.Price</h2><button class="btn btn-primary btn-sm" type="button">Details</button></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

