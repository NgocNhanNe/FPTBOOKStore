@model IEnumerable<FPTBook.Models.OrderDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Order.Order_ID)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Book.BookName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Order.totalPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Order.Order_ID)
    </td>
   
    <td>
        @Html.DisplayFor(modelItem => item.Book.BookName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Order.Username)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Quantity)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Amount)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Order.totalPrice)
    </td>
    <td>
        @Html.ActionLink("Delete", "Delete", new { id = item.Order_ID })
    </td>
</tr>
}

</table>
