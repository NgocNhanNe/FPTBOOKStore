<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/assetsadmin/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i">
    <link rel="stylesheet" href="~/assetsadmin/fonts/fontawesome-all.min.css">
    <link rel="stylesheet" href="~/assetsadmin/fonts/font-awesome.min.css">
    <link rel="stylesheet" href="~/assetsadmin/fonts/fontawesome5-overrides.min.css">
    <link rel="stylesheet" href="~/assetsadmin/css/Team-Boxed.css">
</head>

<body id="page-top">
    <div id="wrapper">
        <nav class="navbar navbar-dark align-items-start sidebar sidebar-dark accordion bg-gradient-primary p-0" style="background: var(--bs-orange);">
            <div class="container-fluid d-flex flex-column p-0">
                <a class="navbar-brand d-flex justify-content-center align-items-center sidebar-brand m-0" href="@Url.Action("Index","Admin")">
                    <div class="sidebar-brand-icon rotate-n-15"></div>
                    <div class="sidebar-brand-text mx-3"><span style="color: var(--bs-gray-800);font-size: 25px;">ADMIN Page</span></div>
                </a>
                <hr class="sidebar-divider my-0">
                <ul class="navbar-nav text-light" id="accordionSidebar">
                    <li class="nav-item">
                        <a class="nav-link" style="font-size:25.6px">
                            Hi! Admin
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href=@Url.Action("Index","ManageUser") style="font-size: 15.6px; color: var(--bs-gray-800); font-size: 15.6px; font-weight: bold;">
                            <i class="fas fa-user" style="color: var(--bs-gray-800);font-size: 23.6px;"></i>
                            User Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href=@Url.Action("Index","Books") style="color: var(--bs-gray-800);font-size: 15.6px;font-weight: bold;">
                            <i class="fa fa-book" style="font-size: 23.6px;color: var(--bs-gray-800);"></i>
                            Book Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href=@Url.Action("Index","Categories") style="font-size: 15.6px;color: var(--bs-gray-800);font-weight: bold;">
                            <i class="fa fa-th-large" style="color: var(--bs-gray-800);font-size: 23.6px;"></i>
                            Category Manage
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color: var(--bs-gray-800);font-size: 15.6px;font-weight: bold;">
                            <i class="fa fa-shopping-cart" style="color: var(--bs-gray-800);font-size: 23.6px;"></i>
                            Order Management
                        </a>
                    </li>
                    <li class="nav-item" style="font-weight: bold;font-size: 23.6px;color: var(--bs-gray-100);">
                        <a class="nav-link" href=@Url.Action("Logout","User")>
                            <i class="fa fa-sign-out" style="color: var(--bs-gray-100);font-size: 23.6px;"></i>
                            LOG OUT
                        </a>
                    </li>
                </ul>
                <div class="text-center d-none d-md-inline"><button class="btn rounded-circle border-0" id="sidebarToggle" type="button"></button></div>
            </div>
        </nav>

        <div class="container body-content">
                @RenderBody()
        </div>
    </div>
    @RenderSection("scripts", required: false)
    <script src="~/assetsadmin/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/assetsadmin/js/theme.js"></script>

</body>

</html>
