@model FPTBook.Models.Book

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />
<br />
<br>
<div class="row">
    <div class="col col-sm-4" >
        <div class="photo">
            <img style="width: 200px; height:250px" src="~/assets/img/@Html.DisplayFor(model=>model.Img)">
        </div>
    </div>
    <div class="col col-sm-8" >
        <div class="description">
            <h2>
                @Html.DisplayFor(model => model.Category.CatName) : @Html.DisplayFor(model => model.BookName)
            </h2>
            <h1>
               $@Html.DisplayFor(model => model.Price)
            </h1>
            <p>
                @Html.DisplayFor(model => model.Description)
            </p>
            <div class="mb-3"><a class="btn btn-primary d-block w-25" href="@Url.Action("Add to Cart","Cart",new { id = Model.Book_ID })" style="color: var(--bs-gray-800); background: var(--bs-orange); ">Add to Cart</a></div>
            <div class="mb-3"><a class="btn btn-primary d-block w-25" href="@Url.Action("Index","Home")" style="color: var(--bs-orange); background: var(--bs-gray-800); ">Back to Home</a></div>
        </div>
    </div>
</div>
<br />
<br />
