@model FPTBook.Models.Order
@{
    ViewBag.Title = "Checkout_Success";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h2>Checkout_Success</h2>
<h2 style="text-align:center">You'are check out successful!</h2>
<h4 style="text-align:center; color:gray"><i>Have a good day!</i></h4>
<p class="text-center" style="font-size: 25px;">Your order is delivered in 2-5 days</p>
<hr />
<h2 style="text-align:center">Order Details</h2>
<ul class="list-group" style="margin-right: 15%;margin-left: 15%;margin-bottom: 2%;">
    <li class="list-group-item"><span><b>Name:</b> <span style="font-size:23px">@Model.User.FullName</span></span></li>
    <li class="list-group-item"><span><b>Delivery address:</b> <span style="font-size:23px">@Model.Address_Delivery</span></span></li>
    <li class="list-group-item"><span><b>Phone number:</b> <span style="font-size:23px">@Model.Phone_Delivery</span></span></li>
    <li class="list-group-item"><span><b>Order date:</b> <span style="font-size:23px">@Model.Order_Date</span></span></li>
    <li class="list-group-item"><span><b>Order date:</b> <span style="font-size:23px">$ @Model.totalPrice</span></span></li>
</ul>
